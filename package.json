{
  "name": "bhuvan-app",
  "private": true,
  "version": "0.0.0",
  "description": "Bhuvan Trading App",
  "author": "Bhuvan",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"wait-on http://localhost:5173 && electron -r ts-node/register electron/main.ts\"",
    "electron:build": "vite build && tsc -p tsconfig.electron.json && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.bhuvan.app",
    "productName": "Bhuvan App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "USER_GITHUB_USERNAME",
      "repo": "USER_REPO_NAME"
    }
  },
  "dependencies": {
    "@chakra-ui/icons": "1.1.5",
    "@chakra-ui/react": "2.8.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "date-fns": "^4.1.0",
    "framer-motion": "10.18.0",
    "lucide-react": "^0.556.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.68.0",
    "react-is": "^19.2.1",
    "react-router-dom": "^7.10.1",
    "recharts": "^3.5.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "18.3.27",
    "@types/react-dom": "18.3.7",
    "@types/semver": "^7.7.1",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "electron-updater": "^6.6.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}
